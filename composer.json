{
    "name": "vaimo/chromedriver",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "Utility for installing Chromedriver, whatever platform you are on, for use with Behat",
    "authors": [
        {
            "name": "Laurent Baey",
            "email": "laurent.baey@gmail.com"
        },
        {
            "name": "Allan Paiste",
            "email": "allan.paiste@vaimo.com"
        }
    ],
    "support": {
        "source": "https://github.com/vaimo/chromedriver",
        "docs": "https://github.com/vaimo/chromedriver",
        "issues": "https://github.com/vaimo/chromedriver/issues"
    },
    "require": {
        "ext-zip": "*",
        "composer-plugin-api": "^1.0"
    },
    "keywords": [
        "Chromedriver",
        "Browser Testing",
        "Selenium",
        "Behat",
        "OSX",
        "Mac",
        "Linux",
        "Windows"
    ],
    "autoload": {
        "psr-0": {
            "Lbaey": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "class": "Lbaey\\Composer\\ChromeDriverPlugin",
        "changelog": {
            "1.2.0": {
                "feature": [
                    "latest chrome driver version auto-detection by contacting Google Storage API",
                    "downloaded file validation"
                ],
                "maintenance": [
                    "improved error handling"
                ]
            }
        }
    }
}
